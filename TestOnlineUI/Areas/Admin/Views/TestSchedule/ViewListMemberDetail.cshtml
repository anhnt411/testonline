@using TestOnlineEntity.Model.ViewModel;
@using TestOnlineEntity.Model.Entity;
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var schedule = (TestSchedule)ViewBag.Schedule;
   

}

@section title{
    Danh sách thí sinh

}

<div class="row table">
    <!-- /.panel-heading -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Họ tên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Chức năng
                    </th>

                </tr>
            </thead>
            <tbody>
                @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td style="display:none" class="tdmemberid">@item.Id</td>
                            <td>@i </td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Address</td>
                            <td> <a href="#" class="deletememberschedule" data-schedule="@schedule.Id" data-idmember="@item.Id"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                        i++;
                    }


                }


            </tbody>
        </table>

        <div class="loader" style="display:none"></div>

    </div>
</div>

<div class="row">
    <button class="btn btn-danger" id="sendEmail" data-schedule="@schedule.Id">Gửi mail đến các thí sinh</button>
</div>


