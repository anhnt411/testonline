@using TestOnlineEntity.Model.Entity;
@model IEnumerable<Exam>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var schedule = (TestSchedule)ViewBag.Schedule;
    var user = ViewBag.User;

}

@section title{
    Danh sách đề thi

}

<div class="row table">
    <!-- /.panel-heading -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>                   
                    <th>
                       Mã đề
                    </th>
                    <th>
                        Số câu hỏi trong đề
                    </th>
                    <th>
                        Người tạo
                    </th>
                    <th>
                       Ngày tạo
                    </th>
                    <th>
                        Chức năng
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id </td>
                            <td>@schedule.TotalQuestion</td>
                            <td>@user.FullName</td>
                            <td>@item.CreatedDate</td>                         
                            <td><a href="~/Admin/TestSchedule/ViewExamDetail?examId=@item.Id"><i class="fas fa-eye coni"></i></a></td>
                        </tr>
                    }


                }


            </tbody>
        </table>
        <button class="btn btn-danger" id="backprev1">Quay lại</button>



    </div>
</div>


