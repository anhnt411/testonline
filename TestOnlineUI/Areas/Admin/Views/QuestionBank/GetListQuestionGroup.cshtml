@using TestOnlineModel.ViewModel.Admin
@model IEnumerable<QuestionGroupViewModel>

<div class="row table">
    <!-- /.panel-heading -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Nhóm câu hỏi <a href="#" class="sortMember" data-sortmember="FullName"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Số câu hỏi <a href="#" class="sortMember" data-sortmember="PhoneNumber"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Chuyên mục <a href="#" class="sortMember" data-sortmember="Email"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Mô tả <a href="#" class="sortMember" data-sortmember="DateOfBirth"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15" /></a>
                    </th>
                    <th>
                        Người tạo <a href="#" class="sortMember" data-sortmember="Address"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Ngày tạo <a href="#" class="sortMember" data-sortmember="Address"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        <a href="#">Thao tác</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {

                        <tr class="rows" data-totalrow="@item.TotalRecord" id="rows">
                            <td>@item.STT </td>
                            <td>@item.Name</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td><a href="/Admin/TestMember/UpdateMember?memberId=@item.Id"><i class="fas fa-pen-alt"></i></a>  <a href="#" class="deletemember" data-unitid="@item.CategoryId" data-idmember="@item.Id"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                    }
                }


            </tbody>
        </table>



    </div>
</div>
