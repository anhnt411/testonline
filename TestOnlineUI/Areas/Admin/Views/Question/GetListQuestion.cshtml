@using TestOnlineModel.ViewModel.Admin
@model IEnumerable<QuestionListViewModel>

<div class="row table question">
    <!-- /.panel-heading -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Nội dung <a href="#" class="sortQuestion" data-sortquestion="Description"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Loại câu hỏi <a href="#" class="sortQuestion" data-sortquestion="QuestionType"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Thời gian tạo <a href="#" class="sortQuestion" data-sortquestion="CreatedDate"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                       Người tạo 
                    </th>
                    <th>
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {

                        <tr class="rows" data-totalrow="@item.TotalRecord" id="rows">
                            <td style="width:20px">@item.STT </td>
                            <td style="width : 330px" width="100px">@Html.Raw(item.Description)</td>
                            <td style="width:150px">@item.QuestionType</td>
                            <td style="width:180px">@item.CreatedDate</td>
                            <td style="width : 180px">@item.CreatedBy</td>
   
                            <td><a href="/Admin/Question/UpdateQuestion?Id=@item.Id"><i class="fas fa-pen-alt"></i></a>  <a href="#" class="deleteQuestion"  data-idquestion="@item.Id"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                    }
                }


            </tbody>
        </table>



    </div>
</div>
