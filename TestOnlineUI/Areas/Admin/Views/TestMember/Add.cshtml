

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}


@section title{
    Thêm mới thành viên
}

@section script{
    <script>
          $('#selectUnitId option[value=@ViewBag.Unit.Id]').attr('selected','selected');
    </script>
}




<div class="col-md-2"></div>
<div class="col-md-8">
    <div class="form_member_main">
        <h4 class="heading_member"><strong>Thêm Mới </strong></h4>
        <div class="form_member">
            @{
                        <form asp-controller="TestMember" asp-action="Add" asp-area="Admin" method="post" id="addmemberfrm" name="addmemberFrm" role="form" enctype="multipart/form-data">

                            <div> <span> Đơn vị </span> <span style="color:red;">*</span></div>
                            <div class="dropdown">
                                <select name="TestUnitId" id="selectUnitId">
                                    @{
                                        foreach (var item in ViewBag.ListUnit)
                                        {

                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>


                            <div>
                                <span> Họ tên </span> <span style="color:red;">*</span>
                            </div>
                            <input type="text" placeholder="Vui lòng nhập vào họ tên" name="Name" class="txtMember">


                            <div>
                                <div>Email <span style="color:red;">*</span></div>  <input type="text" placeholder="Vui lòng nhập vào email" name="Email" class="txtMember">
                            </div>

                            <div>SDT</div>
                            <input type="text" placeholder="Vui lòng nhập vào số điện thoại " name="Phone" class="txtMember">

                            <div>Ngày sinh </div>
                            <div class="dateMember">
                                <input type="date" placeholder="Vui lòng nhập vào ngày sinh" name="DateOfBirth" class="txtMember">
                            </div>

                            <div>Địa chỉ</div>
                            <input type="text" placeholder="Nhập vào địa chỉ" name="Address" class="txtMember">

                            <input type="submit" value="Xác nhận" name="submit" class="txt2Member">
                            <input type="button" value="Quay lại" name="submit" class="txt2Member" id="backListMember" data-memberunitid="@ViewBag.Unit.Id">

                        </form>
            }
        </div>
    </div>
</div>
<div class="col-md-2>"></div>

