
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    //TempData["success"] = TempData["updatesuccess"];
    var list = ViewBag.ListUnit;
    TempData["success"] = TempData["updatemembersuccess"];
}

@section title{
    Danh sách thành viên đơn vị 


}

@section script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twbs-pagination/1.4.2/jquery.twbsPagination.min.js"></script>
    <script src="~/js/member.js"></script>
    <script>
          $('#selectUnitId option[value=@ViewBag.Unit.Id]').attr('selected','selected');
    </script>
  
}

<div class="row">
    <div class="col-md-5">
        <a href="~/Admin/TestMember/Add?unitId=@ViewBag.Unit.Id" class="btn btn-danger">Thêm mới</a>
        <a href="~/Admin/TestMember/AddListMember?unitId=@ViewBag.Unit.Id" class="btn btn-danger">Thêm mới thành viên từ file Excel</a>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <select name="TestUnitId" id="selectUnitId">
            @{
                foreach (var item in list)
                {
                  
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
        <button class="btn btn-danger" id="searchMember">Tìm kiếm</button>
    </div>

</div>



<div id="listMember">
</div>
<div id="pagination" class="pagination"></div>
<button class="btn btn-danger" id="backprevunit">Quay lại</button>
