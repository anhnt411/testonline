@using TestOnlineModel.ViewModel.Admin
@model IEnumerable<TestUnitViewModel>

<div class="row table">
    <!-- /.panel-heading -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Tên đơn vị <a href="#" class="sortUnit" data-sortunit="UnitName"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Địa chỉ <a href="#" class="sortUnit" data-sortunit="Address"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        Số điện thoại <a href="#" class="sortUnit" data-sortunit="PhoneNumber"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        <a href="#">Người tạo</a>
                    </th>
                    <th>
                        Ngày tạo <a href="#" class="sortUnit" data-sortunit="CreatedDate"><img src="https://img.icons8.com/material-two-tone/24/000000/sort.png" height="15"></a>
                    </th>
                    <th>
                        <a href="#">Thao tác</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {

                        <tr class="rows" data-totalrow="@item.TotalRecord" id="rows">
                            <td>@item.STT </td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td><a href="~/Admin/TestMember/Index?unitId=@item.Id"><i class="fas fa-list"></i></a>   <a href="/Admin/TestUnit/Update?unitId=@item.Id"><i class="fas fa-pen-alt"></i></a>  <a href="#" class="deleteunit" data-idunit="@item.Id"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                    }
                }


            </tbody>
        </table>



    </div>
</div>
