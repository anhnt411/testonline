@using TestOnlineModel.ViewModel.Admin
@model IEnumerable<UserScheduleViewModel>


<div class="row tableuser">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Tên kì thi
                        </th>
                        <th>
                            Chuyên mục thi
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        <th>
                            Ngày bắt đầu
                        </th>
                        <th>
                            Ngày kết thúc
                        </th>
                        <th>
                            Thời gian thi
                        </th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @{
                        foreach (var item in Model)
                        {
                            var a = (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate) ? "" : "disabled";
                            var b = (DateTime.Now > item.EndDate && item.IsSubmit == true) ? "disabled" : "";

                                        <tr class="rows" data-totalrow="@item.TotalRecord" id="rows">
                                            <td>@item.STT </td>
                                            <td> @item.ScheduleName</td>
                                            <td>@item.CategoryName</td>
                                            <td>@item.Status</td>
                                            <td>@item.StartDate</td>
                                            <td>@item.EndDate</td>
                                            <td>@item.TotalTime</td>
                                            @if((@item.IsAccess == null || @item.IsAccess == false) && item.IsSubmit !=true ){
                                            <td><button class="btn btn-danger @a"   data-examuser="@item.Id" id="accessexam">Vào thi</button></td>
                                            }
                                            else{
                                            <td><button class="btn btn-danger @b" data-examid="@item.ExamId" id="viewaccessexam">Xem kết quả</button></td>
                                            }

                                        </tr>
                            }
                        }


                </tbody>
            </table>



        </div>
    </div>
    <!-- /.panel-heading -->

</div>
