@using TestOnlineModel.ViewModel.Admin
@model IEnumerable<TestCategoryViewModel>

<div class="row table">
    <!-- /.panel-heading -->
    <div class="table-responsive" id="listCategory">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <a href="#">STT</a>
                    </th>
                    <th>
                        <a href="#">Ảnh đại diện</a>
                    </th>
                    <th>
                        <a href="#">Tên chuyên mục</a>
                    </th>
                    <th>
                        <a href="#">Người sửa</a>
                    </th>
                    <th>
                        <a href="#">Ngày sửa</a>
                    </th>
                    <th>
                        <a href="#">Thao tác</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Select((value,i)=>new { i,value}))
                    {
                        <tr class="rows">
                            <td>@item.i  </td>
                            <td>@item.value.Image</td>
                            <td>@item.value.Description</td>
                            <td>@item.value.UpdatedBy</td>
                            <td>@item.value.UpdatedTime</td>
                            <td><a href="#">Sửa</a> | <a href="/">Xóa</a></td>
                        </tr>
                    }



                }


            </tbody>
        </table>
    </div>
</div>
